<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd" version="1.0">
  <persistence-unit name="punit">
    <non-jta-data-source>java:comp/env/jdbc/jcatapult-cms-module</non-jta-data-source>
    <class>org.jcatapult.module.cms.domain.SiteNode</class>
    <class>org.jcatapult.module.cms.domain.PageNode</class>
    <class>org.jcatapult.module.cms.domain.NodeState</class>
    <class>org.jcatapult.module.cms.domain.NodeActionState</class>
    <class>org.jcatapult.module.cms.domain.NodeAction</class>
    <class>org.jcatapult.module.cms.domain.Node</class>
    <class>org.jcatapult.module.cms.domain.LocaleContent</class>
    <class>org.jcatapult.module.cms.domain.ContentState</class>
    <class>org.jcatapult.module.cms.domain.ContentNode</class>
    <class>org.jcatapult.module.cms.domain.Content</class>
    <class>org.jcatapult.module.simpleuser.domain.DefaultRole</class>
    <class>org.jcatapult.module.simpleuser.domain.DefaultUser</class>
    <properties>
      <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect" />
      <property name="hibernate.show_sql" value="true" />
    </properties>
  </persistence-unit>
</persistence>

