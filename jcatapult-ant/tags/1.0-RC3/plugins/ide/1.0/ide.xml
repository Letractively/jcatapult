<project name="ide">
  <dirname property="dir.plugin.ide" file="${ant.file.ide}"/>
  <path id="classpath.ide">
    <pathelement location="${dir.plugin.ide}/../../libraries/java-net-commons-1.4.4.jar"/>
  </path>

  <!-- set the groovy scripts dir property -->
  <property name="ide.dir.scripts.groovy" value="${dir.plugin.ide}/scripts/groovy"/>

  <target name="ide" description="Generates the IntelliJ and Eclipse project files">
    <ide-pre/>
    <dependencypath pathid="classpath.project" transitive="true"
                    workflow="workflow.project" dependencies="dependencies.project"/>
    <pathconvert pathsep="," property="path" refid="classpath.project"/>

    <groovy classpathref="classpath.ide" src="${ide.dir.scripts.groovy}/CreateFilesXml.groovy"/>

    <available file="${basedir}/web" type="dir" property="is.webapp"/>
    <ant target="-ide-jar"/>
    <ant target="-ide-war"/>
    <ide-post/>
  </target>

  <target name="-ide-war" if="is.webapp">
    <xslt in="${java.io.tmpdir}/files.xml" out=".classpath" style="${dir.plugin.ide}/eclipse-war.xsl"/>
  </target>

  <target name="-ide-jar" unless="is.webapp">
    <xslt in="${java.io.tmpdir}/files.xml" out=".classpath" style="${dir.plugin.ide}/eclipse-jar.xsl"/>
  </target>

  <!-- Pre process macro for overriding -->
  <macrodef name="ide-pre">
    <sequential>
    </sequential>
  </macrodef>

  <!-- Post process macro for overriding -->
  <macrodef name="ide-post">
    <sequential>
    </sequential>
  </macrodef>
</project>
