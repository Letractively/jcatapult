<project name="jar">
  <macrodef name="jar-init">
    <sequential>
      <mkdir dir="${dir.target.jars}"/>
    </sequential>
  </macrodef>

  <macrodef name="jar-local">
    <sequential>
      <jar destfile="${dir.target.jars}/${project.name}-${project.version}.jar">
        <fileset dir="${dir.target.classes.main}" includes="**/*"/>
        <manifest>
          <attribute name="Implementation-Version" value="${project.version}"/>
        </manifest>
      </jar>

      <!-- Source JAR -->
      <jar destfile="${dir.target.jars}/${project.name}-${project.version}-src.jar">
        <fileset dir="${dir.src.java.main}" includes="**/*"/>
      </jar>
    </sequential>
  </macrodef>

  <macrodef name="jar-publish">
    <sequential>
      <publish publishWorkflow="workflow.publish.local" integrationbuild="true"/>
    </sequential>
  </macrodef>

  <!-- Pre process for overriding -->
  <macrodef name="jar-pre">
    <sequential>
    </sequential>
  </macrodef>

  <!-- Post process for overriding -->
  <macrodef name="jar-post">
    <sequential>
    </sequential>
  </macrodef>

  <target name="jar" depends="compile" description="Creates the project JAR file.">
    <jar-init/>
    <jar-pre/>
    <jar-local/>
    <jar-post/>
    <jar-publish/>
  </target>
</project>
