<project name="release-snapshot">

    <!-- trunk scripts -->
  <target name="rel-snapshot-tag-trunk-script" depends="-scm-init">
    <echo>Executing tag-only snapshot release scripts on trunk...</echo>
    <rel_pre/>
    <rel_check_project/>
    <rel_validate_version type="snapshot"/>
    <scm_check_tag_available tag="${project.version}" username="${svn.username}" password="${svn.password}" url="${svn.repo.url}"/>
    <rel_check_changelog/>
    <antcall target="test-unit"/>
    <scm_tag_head tag="${project.version}" username="${svn.username}" password="${svn.password}" url="${svn.repo.url}"/>
    <rel_post/>
    <rel_cleanup/>
  </target>

  <target name="rel-snapshot-full-trunk-script" depends="-scm-init">
    <echo>Executing full snapshot release scripts on trunk...</echo>
    <rel_pre/>
    <rel_check_project/>
    <rel_validate_version type="snapshot"/>
    <scm_check_tag_available tag="${project.version}" username="${svn.username}" password="${svn.password}" url="${svn.repo.url}"/>
    <rel_check_changelog/>
    <antcall target="test-unit"/>
    <scm_tag_head tag="${project.version}" username="${svn.username}" password="${svn.password}" url="${svn.repo.url}"/>
    <rel_deploy_remote/>
    <rel_post/>
    <rel_cleanup/>
  </target>

  <!-- branch scripts -->
  <target name="rel-snapshot-tag-branch-script" depends="-scm-init">
    <echo>Executing tag-only snapshot release scripts on branch...</echo>
    <rel_pre/>
    <rel_check_project/>
    <rel_set_branch_version/>
    <rel_validate_version type="snapshot"/>
    <scm_check_tag_available tag="${project.version}" username="${svn.username}" password="${svn.password}" url="${svn.repo.url}"/>
    <rel_check_changelog/>
    <antcall target="test-unit"/>
    <scm_tag_branch tag="${project.version}" branch="${branch.version}" username="${svn.username}" password="${svn.password}" url="${svn.repo.url}"/>
    <rel_post/>
    <rel_cleanup/>
  </target>

  <target name="rel-snapshot-full-branch-script" depends="-scm-init">
    <echo>Executing full snapshot release scripts on branch...</echo>
    <rel_pre/>
    <rel_check_project/>
    <rel_set_branch_version/>
    <rel_validate_version type="snapshot"/>
    <scm_check_tag_available tag="${project.version}" username="${svn.username}" password="${svn.password}" url="${svn.repo.url}"/>
    <rel_check_changelog/>
    <antcall target="test-unit"/>
    <scm_tag_branch tag="${project.version}" branch="${branch.version}" username="${svn.username}" password="${svn.password}" url="${svn.repo.url}"/>
    <rel_deploy_remote/>
    <rel_post/>
    <rel_cleanup/>
  </target>
</project>
