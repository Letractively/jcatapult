<project name="project-support">
  <dirname property="dir.plugin.module" file="${ant.file.project-support}"/>
  <import file="${dir.plugin.module}/module-macros.xml"/>

  <!-- Adds the module to a project -->
  <target name="add-module" description="Adds a module to the current project.">
    <input message="Enter module URL inside a Savant repository. This should point to the project directory and not a specific version since the latest version will be determined (i.e. http://savant.inversoft.org/example.com/user-module)  *NOTE: Trailing slashes are ignored" addproperty="module.url"/>
    <module_add url="${module.url}"/>
  </target>

  <target name="add-named-module" description="Adds a module that is named on the command-line using the url property">
    <module_add url="${url}"/>
  </target>

  <macrodef name="module_add">
    <attribute name="url"/>
    <sequential>
      <echo message="Checking module URL @{url}"/>
      <condition property="module.exists" value="true">
        <http url="@{url}"/>
      </condition>

      <if>
        <not>
          <equals arg1="${module.exists}" arg2="true"/>
        </not>
        <then>
          <fail message="Module @{url} doesn't exist"/>
        </then>
      </if>

      <module_project_name url="@{url}"/>
      <module_determine_version url="@{url}" name="${module.project.name}"/>
      <module_add_dependency name="${module.project.name}" version="${module.version}" url="@{url}"/>

      <get src="@{url}/${module.version}/${module.project.name}-${module.version}.jar" dest="${java.io.tmpdir}/module.jar"/>
      <module_add_entities persistenceFile="${dir.src.conf.main}/META-INF/persistence.xml">
        <moduleClasspath>
          <pathelement location="${java.io.tmpdir}/module.jar"/>
        </moduleClasspath>
      </module_add_entities>

      <ant target="ide" inheritall="false"/>
      <ant target="create-main-database" inheritall="false"/>
    </sequential>
  </macrodef>
</project>
