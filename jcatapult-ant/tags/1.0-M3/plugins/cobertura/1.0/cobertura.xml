<project name="cobertura">
  <dirname property="cobertura.dir" file="${ant.file.cobertura}"/>
  <path id="classpath.coverage">
    <fileset dir="${cobertura.dir}/lib" includes="*.jar"/>
  </path>
  <taskdef classpathref="classpath.coverage" resource="tasks.properties"/>

  <!-- Pre process macro for overriding -->
  <macrodef name="coverage-pre">
    <sequential>
    </sequential>
  </macrodef>

  <target name="coverage" description="Runs test code coverage" depends="clean,jar">
    <coverage-pre/>
    <delete file="cobertura.ser"/>

    <cobertura-instrument todir="${dir.target}/classes/instrumented">
      <fileset dir="${dir.target.classes.main}">
        <include name="**/*.class"/>
      </fileset>
    </cobertura-instrument>

    <antcall target="-test-run"/>

    <cobertura-report format="html" destdir="${dir.target}/test/coverage">
      <fileset dir="${dir.src.java.main}">
        <include name="**/*.java"/>
      </fileset>
    </cobertura-report>
    <coverage-post/>
  </target>

  <!-- Post process macro for overriding -->
  <macrodef name="coverage-post">
    <sequential>
    </sequential>
  </macrodef>
</project>