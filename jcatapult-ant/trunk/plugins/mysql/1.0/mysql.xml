<project name="mysql">
  <dirname property="dir.plugin.mysql" file="${ant.file.mysql}"/>
  <path id="classpath.plugin.mysql">
    <fileset dir="${dir.plugin.mysql}/lib" includes="*.jar"/>
    <pathelement location="${dir.plugin.mysql}/../../libraries/java-net-commons-1.4.4.jar"/>
    <pathelement location="${dir.plugin.mysql}/../../libraries/savant-core-2.0-M3.jar"/>
    <pathelement location="${dir.plugin.mysql}/../../libraries/log4j-1.2.9.jar"/>
    <pathelement location="${dir.plugin.mysql}/../../libraries/jdom-1.0.jar"/>
    <pathelement location="${dir.plugin.mysql}/../../libraries/svnkit-1.1.4.jar"/>
    <pathelement location="${dir.plugin.mysql}/../../libraries/ganymed-1.1.4.jar"/>
  </path>

  <target name="-init-params-mysql">
    <!-- create.db param -->
    <if>
      <isset property="create.db"/>
      <then>
        <if>
          <equals arg1="${create.db}" arg2="false"/>
          <then>
            <echo>Ignoring database creation!</echo>
          </then>
        </if>
      </then>
      <else>
        <property name="create.db" value="true"/>
      </else>
    </if>

    <!-- project.requires.db param -->
    <if>
      <isset property="project.requires.database"/>
      <then>
        <if>
          <equals arg1="${project.requires.database}" arg2="true"/>
          <then>
            <echo>Project requires database</echo>
          </then>
          <else>
            <echo>Project does not require a database</echo>
          </else>
        </if>
      </then>
      <else>
        <property name="project.requires.database" value="true"/>
      </else>
    </if>

    <!-- project.contains.domain param -->
    <if>
      <isset property="project.contains.domain"/>
      <then>
        <if>
          <equals arg1="${project.contains.domain}" arg2="true"/>
          <then>
            <echo>Project contains domain objects</echo>
          </then>
          <else>
            <echo>Project does not contain domain objects</echo>
          </else>
        </if>
      </then>
      <else>
        <property name="project.contains.domain" value="true"/>
      </else>
    </if>
  </target>

  <target name="-init-database">
    <dependencypath pathid="classpath.project" transitive="true"
                    workflow="workflow.project" dependencies="dependencies.project"/>
  </target>

  <target name="create-main-database" depends="-init-params-mysql, jar,-init-database" description="Creates the main database.  Specify '-Dcreate.db=false' to forcefully prevent db creation.">
    <create-main-database-pre/>
    <if>
      <not><equals arg1="${project.requires.database}" arg2="false"/></not>
      <then>
        <database_create database="${project.database}" url="jdbc:mysql://localhost:3306/${project.database}?user=dev&amp;password=dev&amp;characterEncoding=utf8"/>
     </then>
    </if>
    <create-main-database-post/>
  </target>

  <target name="create-test-database" depends="-init-params-mysql, jar,-init-database" description="Creates the test database">
    <create-test-database-pre/>

    <if>
      <equals arg1="${create.db}" arg2="true"/>
      <then>
        <if>
          <not>
            <equals arg1="${project.requires.database}" arg2="false"/>
          </not>
          <then>
            <database_create database="${project.database}_test"
                             url="jdbc:mysql://localhost:3306/${project.database}_test?user=dev&amp;password=dev&amp;characterEncoding=utf8"/>
          </then>
        </if>
      </then>
    </if>
    <create-test-database-post/>
  </target>

  <macrodef name="database_create">
    <attribute name="url"/>
    <attribute name="database"/>
    <sequential>
      <echo>Creating database @{database}...</echo>
      <echo message="-- Dropping db"/>
      <sql driver="com.mysql.jdbc.Driver" url="jdbc:mysql://localhost:3306/mysql"
           userid="${db.username}" password="${db.password}" autocommit="true" expandproperties="true"
           classpathref="classpath.plugin.mysql">
        DROP DATABASE IF EXISTS @{database};
        CREATE DATABASE @{database} CHARSET utf8 COLLATE utf8_bin;
        GRANT ALL PRIVILEGES on @{database}.* to 'dev'@'localhost' identified by 'dev';
        GRANT ALL PRIVILEGES on @{database}.* to 'dev'@'127.0.0.1' identified by 'dev';
      </sql>

      <database_manager url="@{url}"/>

      <echo>Done creating database</echo>
    </sequential>
  </macrodef>

  <macrodef name="database_manager">
    <attribute name="url"/>
    <sequential>
      <if>
        <equals arg1="${project.contains.domain}" arg2="false"/>
        <then>
          <property name="no.domain.switch" value="--no-domain"/>
        </then>
        <else>
          <property name="no.domain.switch" value=""/>
        </else>
      </if>
      <java classname="org.jcatapult.dbmgr.DatabaseManager" fork="true" failonerror="true">
        <classpath>
          <path refid="classpath.project"/>
          <path refid="classpath.plugin.mysql"/>
          <path location="${dir.target.classes.main}"/>
          <path location="${dir.target.classes.test.unit}"/>

          <!--
            Is is only here because we need the test JAR in the classpath for components so that
            the persistence.xml will be available to Hibernate
          -->
          <path>
            <fileset dir="${dir.target.jars}" includes="*test*.jar"/>
          </path>
        </classpath>
        <sysproperty key="java.util.logging.config.file" value="${dir.plugin.mysql}/lib/logging.properties"/>
        <arg line="${no.domain.switch} punit @{url} ${project.name} src/db/main mysql5 java:comp/env/jdbc/${underscored.project.name} ./project.xml dependencies.project ${project.version}"/>
      </java>
    </sequential>
  </macrodef>

  <!-- Pre process for overriding -->
  <macrodef name="create-main-database-pre">
    <sequential></sequential>
  </macrodef>

  <!-- Pre process for overriding -->
  <macrodef name="create-test-database-pre">
    <sequential></sequential>
  </macrodef>

  <!-- Post process for overriding -->
  <macrodef name="create-main-database-post">
    <sequential></sequential>
  </macrodef>

  <!-- Post process for overriding -->
  <macrodef name="create-test-database-post">
    <sequential></sequential>
  </macrodef>
</project>
