<project name="init-module">
  <dirname property="dir.plugin.init-module" file="${ant.file.init-module}"/>
  <import file="${dir.plugin.init-module}/init.xml"/>

  <property name="dir.src.web.main" value="${dir.src}/web/main"/>
  <property name="dir.src.web.test" value="${dir.src}/web/test"/>
  <property name="dir.src.static.main" value="${dir.src}/static/main"/>
  <property name="dir.target.web" value="${dir.target}/web"/>

  <!-- set the groovy scripts dir property -->
  <property name="init.dir.scripts.groovy" value="${dir.plugin.init-module}/scripts/groovy"/>

  <!-- Makes the module name -->
  <groovy src="${init.dir.scripts.groovy}/CreateModuleName.groovy"/>

</project>
