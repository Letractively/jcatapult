<project name="base-deploy">
  <dirname property="deploy.dir" file="${ant.file.base-deploy}"/>

  <!-- This copies the base tomcat configuration into the given todir -->
  <macrodef name="copy-config">
    <attribute name="todir"/>
    <attribute name="webdir"/>
    <sequential>
      <mkdir dir="@{todir}/logs"/>
      <mkdir dir="@{todir}/temp"/>
      <mkdir dir="@{todir}/work"/>
      <copy todir="@{todir}">
        <fileset dir="${deploy.dir}/files" includes="**/*"/>
        <filterset>
          <filter token="WEB_DIR" value="@{webdir}"/>
        </filterset>
      </copy>
      <chmod file="@{todir}/bin/tomcat.sh" perm="u+x"/>
    </sequential>
  </macrodef>

