<project name="compile">
  <target name="compile" depends="compile-main,compile-test-unit,compile-test-integration" description="Compiles the main and test Java classes"/>

  <target name="-compile-init-main">
    <mkdir dir="${dir.target.classes.main}"/>
    <!--
      Fetch artifacts but DON'T grab transitive dependencies because this should be explicitly the
      artifacts that are required to compile this project and NOT transitive deps.
    -->
    <dependencypath pathid="classpath.compile.main" types="compile-only,compile,domains" includedependencies="false"
                    workflow="workflow.project" dependencies="dependencies.project"/>
  </target>

  <target name="-compile-init-test-integration">
    <mkdir dir="${dir.target.classes.test.integration}"/>
    <!--
      Fetch artifacts but DON'T grab transitive dependencies because this should be explicitly the
      artifacts that are required to compile this project and NOT transitive deps.
    -->
    <dependencypath pathid="classpath.compile.test" types="compile-only,compile,test-compile"
                    includedependencies="false" workflow="workflow.project" dependencies="dependencies.project"/>
  </target>

  <target name="-compile-init-test-unit">
    <mkdir dir="${dir.target.classes.test.unit}"/>
    <!--
      Fetch artifacts but DON'T grab transitive dependencies because this should be explicitly the
      artifacts that are required to compile this project and NOT transitive deps.
    -->
    <dependencypath pathid="classpath.compile.test" types="compile-only,compile,test-compile"
                    includedependencies="false" workflow="workflow.project" dependencies="dependencies.project"/>
  </target>

  <target name="-compile-main-conf" if="dir.src.conf.main">
    <copy todir="${dir.target.classes.main}" failonerror="false">
      <fileset dir="${dir.src.conf.main}">
        <include name="**/*"/>
      </fileset>
    </copy>
  </target>

  <target name="compile-main" depends="-compile-init-main,-compile-main-conf"
          description="Compiles the main Java files">
    <compile-main-pre/>
    <javac srcdir="${dir.src.java.main}" destdir="${dir.target.classes.main}" debug="true"
           deprecation="true" includeantruntime="false" fork="true" executable="${jdk.project}/bin/javac">
      <classpath>
        <path refid="classpath.compile.main"/>
      </classpath>
    </javac>
    <copy todir="${dir.target.classes.main}">
      <fileset dir="${dir.src.java.main}">
        <exclude name="**/*.java"/>
      </fileset>
    </copy>
    <compile-main-post/>
  </target>

  <target name="-compile-test-integration-conf" if="dir.src.conf.test.integration">
    <copy todir="${dir.target.classes.test.integration}" failonerror="false">
      <fileset dir="${dir.src.conf.test.integration}">
        <include name="**/*"/>
      </fileset>
    </copy>
  </target>

  <target name="-compile-test-unit-conf" if="dir.src.conf.test.unit">
    <copy todir="${dir.target.classes.test.unit}" failonerror="false">
      <fileset dir="${dir.src.conf.test.unit}">
        <include name="**/*"/>
      </fileset>
    </copy>
  </target>

  <target name="compile-test-unit" depends="-compile-init-test-unit,-compile-test-unit-conf"
          description="Compiles the unit test Java files">
    <compile-test-unit-pre/>
    <javac srcdir="${dir.src.java.test.unit}" destdir="${dir.target.classes.test.unit}" debug="true"
           deprecation="true" includeantruntime="false" fork="true" executable="${jdk.project}/bin/javac">
      <classpath>
        <path refid="classpath.compile.test"/>
        <path location="${dir.target.classes.main}"/>
      </classpath>
    </javac>
    <!-- copies non-java resources to the unit test directory -->
    <copy todir="${dir.target.classes.test.unit}">
      <fileset dir="${dir.src.java.test.unit}">
        <exclude name="**/*.java"/>
      </fileset>
    </copy>
    <compile-test-unit-post/>
  </target>

  <target name="compile-test-integration" depends="-compile-init-test-integration,-compile-test-integration-conf"
          description="Compiles the integration test Java files">
    <compile-test-integration-pre/>
    <javac srcdir="${dir.src.java.test.integration}" destdir="${dir.target.classes.test.integration}" debug="true"
           deprecation="true" includeantruntime="false" fork="true" executable="${jdk.project}/bin/javac">
      <classpath>
        <path refid="classpath.compile.test"/>
        <path location="${dir.target.classes.main}"/>
      </classpath>
    </javac>
    <!-- copies non-java resources to the integration test directory -->
    <copy todir="${dir.target.classes.test.integration}">
      <fileset dir="${dir.src.java.test.integration}">
        <exclude name="**/*.java"/>
      </fileset>
    </copy>
    <compile-test-integration-post/>
  </target>

  <!-- Pre process for overriding -->
  <macrodef name="compile-main-pre">
    <sequential>
    </sequential>
  </macrodef>

  <!-- Pre process for overriding -->
  <macrodef name="compile-test-unit-pre">
    <sequential>
    </sequential>
  </macrodef>

  <!-- Pre process for overriding -->
  <macrodef name="compile-test-integration-pre">
    <sequential>
    </sequential>
  </macrodef>

  <!-- Post process for overriding -->
  <macrodef name="compile-main-post">
    <sequential>
    </sequential>
  </macrodef>

  <!-- Post process for overriding -->
  <macrodef name="compile-test-unit-post">
    <sequential>
    </sequential>
  </macrodef>

  <!-- Post process for overriding -->
  <macrodef name="compile-test-integration-post">
    <sequential>
    </sequential>
  </macrodef>
</project>
