<project name="savant">
  <dirname property="dir.plugin.savant" file="${ant.file.savant}"/>
  <path id="classpath.savant">
    <fileset dir="${dir.plugin.savant}/lib" includes="*.jar"/>
    <pathelement location="${dir.plugin.savant}/../../libraries/java-net-commons-1.4.2.jar"/>
  </path>

  <!-- Dependency tasks -->
  <taskdef name="artifactcopy" classname="net.java.savant.dep.ant.taskdefs.ArtifactCopyTask"
           classpathref="classpath.savant" loaderref="savant"/>
  <taskdef name="dependencyclean" classname="net.java.savant.dep.ant.taskdefs.DependencyCleanTask"
           classpathref="classpath.savant" loaderref="savant"/>
  <taskdef name="dependencyresolve" classname="net.java.savant.dep.ant.taskdefs.DependencyResolveTask"
           classpathref="classpath.savant" loaderref="savant"/>
  <taskdef name="dependencypath" classname="net.java.savant.dep.ant.taskdefs.DependencyPathTask"
           classpathref="classpath.savant" loaderref="savant"/>
  <taskdef name="j2eedeploy" classname="net.java.savant.dep.ant.taskdefs.J2EEArtifactDeployTask"
           classpathref="classpath.savant" loaderref="savant"/>
  <taskdef name="j2eeclean" classname="net.java.savant.dep.ant.taskdefs.J2EEArtifactCleanTask"
           classpathref="classpath.savant" loaderref="savant"/>
  <taskdef name="publish" classname="net.java.savant.dep.ant.taskdefs.PublishTask" classpathref="classpath.savant"
           loaderref="savant"/>
  <taskdef name="savantinit" classname="net.java.savant.ant.taskdefs.SavantInitTask" classpathref="classpath.savant"
           loaderref="savant"/>

  <!-- Dependecy types -->
  <typedef name="artifact" classname="net.java.savant.dep.ant.types.ArtifactType" classpathref="classpath.savant"
           loaderref="savant"/>

  <!-- Other standard tasks -->
  <taskdef name="uncopy" classname="net.java.savant.dep.ant.taskdefs.UncopyTask" classpathref="classpath.savant"
           loaderref="savant"/>
  <taskdef name="macroforeach" classname="net.java.savant.dep.ant.taskdefs.MacroForeachTask"
           classpathref="classpath.savant" loaderref="savant"/>

  <!-- Initialize Savant -->
  <savantinit/>

  <target name="deps-resolve" description="Resolves the project dependencies">
    <dependencyresolve workflow="workflow.project" dependencies="dependencies.project"/>
  </target>
</project>
