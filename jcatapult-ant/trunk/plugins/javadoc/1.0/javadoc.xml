<project>

  <!--
  =====================================================================
  Creates the Javadoc API documentation.
  =====================================================================
  -->
  <target name="javadoc" depends="compile, check-javadoc-uptodate"
      unless="javadoc.uptodate"
      description="Creates the Javadoc API documentation.">
    <javadoc-pre/>
    <mkdir dir="${dir.target.javadocs}"/>

    <delete>
      <fileset dir="${dir.target.javadocs}" excludes="**/*.gif" />
    </delete>

    <javadoc packagenames="${list.javadoc.packages}" excludepackagenames="${javadoc.excludes}"
        sourcepath="${dir.src.java.main}" destdir="${dir.target.javadocs}" author="true" 
        version="true" private="false" windowtitle="${javadoc.project.name} API" 
        doctitle="${javadoc.project.name}" bottom="${javadoc.bottom}" source="${build.source}"
        executable="${jdk.project}/bin/javadoc">
      <classpath refid="classpath.compile.main"/>
      <link href="${url.javadoc.javase}"/>
      <link href="${url.javadoc.javaee}"/>
      <link href="http://commons.apache.org/lang/api-release/"/>
      <link href="http://commons.apache.org/io/api-release/"/>
      <link href="http://joda-time.sourceforge.net/api-release/"/>
    </javadoc>
    <javadoc-post/>
  </target>

  <target name="check-javadoc-uptodate">
    <uptodate property="javadoc.uptodate" targetfile="${dir.target.javadocs}/packages.action" >
      <srcfiles dir= "${dir.src.java.main}" includes="**/*.java" />
    </uptodate>
  </target>

  <!--
  =====================================================================
  Zip doc into a single file ready for Source Control
  =====================================================================
  -->
  <target name="zipjavadoc" depends="javadoc"
      description="Zips the Javadoc API documentation into a single file.">
    <zip zipfile="${dir.target.javadocs}/javadoc.zip" basedir="${dir.target.javadocs}"/>
  </target>

  <!-- Pre process for overriding -->
  <macrodef name="javadoc-pre">
    <sequential>
    </sequential>
  </macrodef>

  <!-- Post process for overriding -->
  <macrodef name="javadoc-post">
    <sequential>
    </sequential>
  </macrodef>
</project>
