<project name="release-library">
  <property name="tmp.dir" value="${user.home}/.release/tmp"/>

  <tstamp>
    <format property="timestamp" pattern="yyyy-MM-dd-HmmS"/>
  </tstamp>
  <property name="dir.checkout" value="${tmp.dir}/${project.name}-${timestamp}"/>

  <!-- Pull in the individual files -->
  <dirname property="dir.release-library" file="${ant.file.release-library}"/>
  <import file="${dir.release-library}/release-common.xml"/>
  <import file="${dir.release-library}/release-snapshot.xml"/>
  <import file="${dir.release-library}/release-patch.xml"/>
  <import file="${dir.release-library}/release-minor.xml"/>
  <import file="${dir.release-library}/release-major.xml"/>

  <!-- Nothing needed here -->
  <target name="-rel-init"/>

  <!-- Deploys jar to the appropriate fetch locations -->
  <macrodef name="rel_deploy_remote">
    <sequential>
      <rel_deploy_remote_pre/>
      <publish publishWorkflow="workflow.publish.remote"/>
      <rel_deploy_remote_post/>
    </sequential>
  </macrodef>

  <macrodef name="rel_deploy_remote_pre">
    <sequential>
    </sequential>
  </macrodef>

  <macrodef name="rel_deploy_remote_post">
    <sequential>
    </sequential>
  </macrodef>

  <!-- Post process marco that can be overridden -->
  <macrodef name="rel_post_process">
    <sequential>
    </sequential>
  </macrodef>
</project>
