<project name="j2ee">

  <!-- Pseudo-target -->
  <target name="app" description="Builds the exploded web application"
          depends="jar,deploy-local">
    <app-pre/>
    <app-local/>
    <app-dependencies/>
    <app-post/>
  </target>

  <!-- Pre process macro for overriding -->
  <macrodef name="app-pre">
    <sequential>
    </sequential>
  </macrodef>

  <macrodef name="app-local">
    <sequential>
      <copy todir="${dir.web}/WEB-INF/lib" failonerror="no" overwrite="yes">
        <fileset dir="${dir.target.jars}" includes="**/*"/>
      </copy>
      <copy todir="${dir.web}/WEB-INF/classes" failonerror="no" overwrite="yes">
        <fileset dir="${dir.src.conf.main}" includes="logging.properties">
        </fileset>
      </copy>
    </sequential>
  </macrodef>

  <macrodef name="app-dependencies">
    <sequential>
      <artifactcopy todir="${dir.web}/WEB-INF/lib" flatten="true" types="compile,run"
                    workflow="workflow.project" dependencies="dependencies.project"/>
    </sequential>
  </macrodef>

  <!-- Post process macro for overriding -->
  <macrodef name="app-post">
    <sequential>
    </sequential>
  </macrodef>
</project>
