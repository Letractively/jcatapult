<project name="project-support">
  <dirname property="dir.plugin.module" file="${ant.file.project-support}"/>
  <import file="${dir.plugin.module}/module-macros.xml"/>

  <!-- Adds the module to a project -->
  <target name="add-module" description="Adds a module to the current project.">
    <input message="Enter Savant group that the module is in (i.e. modules.example.com)" addproperty="module.group"/>
    <input message="Enter project name of the module (i.e. user-module)" addproperty="module.project"/>
    <module_add group="${module.group}" project="${module.project}"/>
  </target>

  <target name="add-named-module" description="Adds a module that is named on the command-line using the url property">
    <module_add url="${url}"/>
  </target>

  <macrodef name="module_add">
    <attribute name="group"/>
    <attribute name="project"/>
    <sequential>
      <echo message="Using Savant to add module @{group} @{project}"/>
      <module_properties group="@{group}" project="@{project}"/>

      <echo message="Version is ${module.version}"/>
      <echo message="File is ${module.file}"/>
      <module_add_dependency group="@{group}" project="@{project}" version="${module.version}"/>

      <module_add_entities persistenceFile="${dir.src.conf.main}/META-INF/persistence.xml">
        <moduleClasspath>
          <pathelement location="${module.file}"/>
        </moduleClasspath>
      </module_add_entities>

      <ant target="ide" inheritall="false"/>
      <ant target="create-main-database" inheritall="false"/>
    </sequential>
  </macrodef>
</project>
