<project name="hibernate">
  <dirname property="dir.plugin.hibernate" file="${ant.file.hibernate}"/>
  <path id="classpath.hibernate">
    <fileset dir="${dir.plugin.hibernate}/lib" includes="*.jar"/>
  </path>

  <taskdef name="hibernatetool" classname="org.hibernate.tool.ant.HibernateToolTask" classpathref="classpath.hibernate"/>

  <!-- Pre process macro for overriding -->
  <macrodef name="table-sql-pre">
    <sequential>
    </sequential>
  </macrodef>

  <target name="table-sql" depends="jar" description="Outputs to stdout the tables.sql using the Entity Objects">
    <table-sql-pre/>
    <dependencypath pathid="classpath.hibernate.main" types="compile-only,compile,run" transitive="true"
        workflow="workflow.project" dependencies="dependencies.project"/>
    <hibernatetool destdir="${dir.src.db.main}/base">
      <classpath>
        <!-- it is in this classpath you put your classes dir, and/or jpa persistence compliant jar -->
        <path refid="classpath.hibernate.main"/>
        <path location="${dir.target.classes.main}"/>
        <path location="${dir.target.classes.test}"/>
        <path>
          <fileset dir="${dir.target.jars}" includes="*.jar"/>
        </path>
      </classpath>

      <!--<configuration propertyfile="${dir.src.conf.test}/hibernate.properties"/>-->
      <jpaconfiguration persistenceunit="punit"/>
      <hbm2ddl export="false" outputfilename="tables.sql" format="true"/>
    </hibernatetool>
    <table-sql-post/>
  </target>

  <!-- Post process macro for overriding -->
  <macrodef name="table-sql-post">
    <sequential>
    </sequential>
  </macrodef>
</project>
